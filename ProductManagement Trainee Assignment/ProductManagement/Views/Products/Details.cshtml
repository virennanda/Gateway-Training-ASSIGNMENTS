@model ProductManagement.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    
    <div class="container-fliud">
        <div class="wrapper row">
            <div class="col-md-6">
                <div class="preview-pic tab-content">
                    @if (!String.IsNullOrEmpty(Model.LargeImage))
                    {
                        <div class="tab-pane" id="pic-1">
                            <img src="@Url.Content(Model.LargeImage)"
                                 height="400"
                                 width="252"
                                 alt="@Model.Name" />
                        </div>
                    }
                    @if (!String.IsNullOrEmpty(Model.SmallImage))
                    {
                        <div class="tab-pane active" id="pic-2">
                            <img src="@Url.Content(Model.SmallImage)"
                                 height="400"
                                 width="252"
                                 alt="@Model.Name" />
                        </div>
                    }

                </div>
                <ul class="preview-thumbnail nav nav-tabs">
                    @if (!String.IsNullOrEmpty(Model.LargeImage))
                    {
                        <li class="tab-pane" id="pic-1">
                            <img src="@Url.Content(Model.LargeImage)"
                                 alt="@Model.Name"
                                 height="200"
                                 alt="@Model.Name" />
                        </li>
                    }
                    @if (!String.IsNullOrEmpty(Model.SmallImage))
                    {
                        <li class="tab-pane active" id="pic-2">
                            <a data-target="#pic-2" data-toggle="tab">
                                <img src="@Url.Content(Model.SmallImage)"
                                     alt="@Model.Name"
                                     height="200"
                                     width="126" />
                            </a>
                        </li>
                    }
                </ul>

            </div>
            <div class="details col-md-6">
                <label for=".product-title" class="text-muted">
                    <u>
                    Product Name 
                    </u>
                </label>
                <h3 class="product-title">
                    @Model.Name
                </h3>

                <label for="ShortDescrription" class="text-muted">
                    <u>
                    Short Details :
                    </u>
                </label>
                <p name="ShortDescrription"class="product-description">
                    @Model.ShortDescription
                </p>
                @if (!String.IsNullOrEmpty(Model.LongDescription))
                {
                <label for="LongDescription" class="text-muted">
                    <u>
                    Details :
                    </u>
                </label>

                    <p name="LongDescription" class="product-description">
                        @Model.LongDescription
                    </p>
                }
                    <h4 class="price">
                        <label for="Price" class="text-muted">
                            <u>
                            Price :
                            </u>
                        </label>
                        <span name="Price">
                            @Model.Price
                        </span>
                    </h4>
                    <h4 class="price">
                        <label for="Quantity" class="text-muted">
                            <u>
                                Quantity :
                            </u>
                        </label>
                        <span name="Quantity">
                            @Model.Quantity
                        </span>
                    </h4>
                    <h5 class="sizes">
                        <label for="Category" class="text-muted">
                            <u>
                                Category :
                            </u>
                        </label>
                        <span name="Category">
                            @Model.Category.Name
                        </span>
                    </h5>

            </div>
        </div>
    </div>
</div>

